<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "https://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.nxu.mapper.UserMapper">

    <insert id="insertUser">
        insert into `user` values (null, #{name}, #{phone}, #{password}, #{address}, #{avatar}, #{card}, #{other}, #{type})
    </insert>

    <update id="updateUser">
        update `user`
        <set>
            <if test="name != null and name != ''">
                name = #{name},
            </if>
            <if test="phone != null and phone != ''">
                phone = #{phone},
            </if>
            <if test="password != null and password != ''">
                password = #{password},
            </if>
            <if test="address != null and address != ''">
                address = #{address},
            </if>
            <if test="avatar != null and avatar != ''">
                avatar = #{avatar},
            </if>
            <if test="card != null and card != ''">
                card = #{card},
            </if>
            <if test="other != null and other != ''">
                other = #{other},
            </if>
            <if test="type != null">
                type = #{type},
            </if>
        </set>
        where id = #{id}
    </update>

    <delete id="deleteUser">
        delete from `user` where id = #{id}
    </delete>

    <select id="selectUserById" resultType="com.nxu.entity.User">
        select * from `user` where id = #{id}
    </select>

    <select id="selectSomeUser" resultType="com.nxu.entity.User">
        select * from `user`
        <where>
            <if test="name != null and name != ''">
                name LIKE CONCAT('%', #{name}, '%')
            </if>
            <if test="type != null">
                AND type = #{type}
            </if>
        </where>
    </select>

    <select id="selectUserByPhone" resultType="com.nxu.entity.User">
        select * from `user` where phone = #{phone}
    </select>
</mapper>